# ABOUTME: Example environment variables for bro-chat.
# ABOUTME: Copy this file to .env and fill in your values.

# Google API key for CrewAI agents (Gemini)
GOOGLE_API_KEY=your-google-api-key

# Langfuse observability (optional but recommended)
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-your-langfuse-public-key
LANGFUSE_SECRET_KEY=sk-your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# GitHub OAuth for authentication
# Create at: https://github.com/settings/developers
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Generate with: chainlit create-secret
CHAINLIT_AUTH_SECRET=your-chainlit-auth-secret

# Application settings
PORT=1337
DEBUG=false

# Model configuration
LLM_MODEL=gemini/gemini-2.0-flash-exp
DYNAGENT_CONFIG_ROOT_DIR=configs/bro
DYNA_CONTEXT_CONFIG_PATH=configs/bro/context.yaml
