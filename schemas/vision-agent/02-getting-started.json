{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "vision-agent/02-getting-started.json",
  "title": "Getting Started Section",
  "description": "Schema for the Getting Started section with overview and vision",
  "type": "object",
  "required": ["overview", "vision"],
  "properties": {
    "overview": {
      "type": "string",
      "description": "High-level overview of the component",
      "minLength": 50
    },
    "vision": {
      "type": "string",
      "description": "Long-term vision and aspirations for the component",
      "minLength": 50
    },
    "success_metrics": {
      "type": "array",
      "description": "Key metrics that define success",
      "items": {"type": "string"},
      "examples": [["95% uptime", "< 100ms response time"]]
    }
  }
}
