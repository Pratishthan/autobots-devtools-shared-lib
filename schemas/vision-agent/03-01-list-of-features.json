{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "vision-agent/03-01-list-of-features.json",
  "title": "List of Features Section",
  "description": "Schema for the List of Features section",
  "type": "object",
  "required": ["features"],
  "properties": {
    "features": {
      "type": "array",
      "description": "List of component features",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Short, descriptive feature name",
            "minLength": 3,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "description": "Brief description of what the feature does",
            "minLength": 10
          },
          "category": {
            "type": "string",
            "description": "Feature category for grouping",
            "enum": ["core", "integration", "admin", "reporting", "security", "other"],
            "default": "core"
          },
          "priority": {
            "type": "string",
            "description": "Feature priority level",
            "enum": ["must_have", "should_have", "nice_to_have"],
            "default": "should_have"
          }
        }
      },
      "minItems": 1
    }
  }
}
