{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "vision-agent/05-entity.json",
  "title": "Entity Section",
  "description": "Schema for individual entity definitions",
  "type": "object",
  "required": ["name", "description", "attributes"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Entity name in PascalCase or kebab-case",
      "minLength": 2,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "What this entity represents",
      "minLength": 10
    },
    "purpose": {
      "type": "string",
      "description": "Why this entity exists in the system"
    },
    "attributes": {
      "type": "array",
      "description": "Entity attributes/fields",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Attribute name"
          },
          "type": {
            "type": "string",
            "description": "Data type",
            "enum": ["string", "number", "boolean", "date", "datetime", "object", "array", "uuid", "email", "url"]
          },
          "required": {
            "type": "boolean",
            "description": "Whether this attribute is required",
            "default": false
          },
          "description": {
            "type": "string",
            "description": "What this attribute represents"
          },
          "constraints": {
            "type": "object",
            "description": "Validation constraints",
            "properties": {
              "minLength": {"type": "integer"},
              "maxLength": {"type": "integer"},
              "minimum": {"type": "number"},
              "maximum": {"type": "number"},
              "pattern": {"type": "string"},
              "enum": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      },
      "minItems": 1
    },
    "relationships": {
      "type": "array",
      "description": "Relationships to other entities",
      "items": {
        "type": "object",
        "required": ["entity", "type"],
        "properties": {
          "entity": {
            "type": "string",
            "description": "Related entity name"
          },
          "type": {
            "type": "string",
            "description": "Relationship cardinality",
            "enum": ["one-to-one", "one-to-many", "many-to-many"]
          },
          "required": {
            "type": "boolean",
            "description": "Whether this relationship is required",
            "default": false
          },
          "description": {
            "type": "string",
            "description": "Description of the relationship"
          }
        }
      }
    },
    "business_rules": {
      "type": "array",
      "description": "Business rules and constraints",
      "items": {"type": "string"}
    }
  }
}
