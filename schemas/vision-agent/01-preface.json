{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "vision-agent/01-preface.json",
  "title": "Preface Section",
  "description": "Schema for the Preface section of a vision document",
  "type": "object",
  "required": ["about_this_guide", "audience"],
  "properties": {
    "about_this_guide": {
      "type": "string",
      "description": "Description of what this document contains and its purpose",
      "minLength": 20
    },
    "audience": {
      "type": "array",
      "description": "List of intended audience types",
      "items": {"type": "string"},
      "minItems": 1,
      "examples": [["Developers", "Architects", "Product Managers"]]
    },
    "reference_documents": {
      "type": "array",
      "description": "Related documentation references",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Document name or title"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Link to the document"
          },
          "description": {
            "type": "string",
            "description": "Brief description of relevance"
          }
        }
      }
    },
    "glossary": {
      "type": "array",
      "description": "Domain-specific terms and definitions",
      "items": {
        "type": "object",
        "required": ["term", "definition"],
        "properties": {
          "term": {
            "type": "string",
            "description": "Term or abbreviation"
          },
          "definition": {
            "type": "string",
            "description": "Definition of the term"
          }
        }
      }
    }
  }
}
